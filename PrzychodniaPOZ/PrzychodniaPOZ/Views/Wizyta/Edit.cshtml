@model PrzychodniaPOZ.Models.WizytaLekarz


@{
    ViewBag.Title = "Zapisz";
    if (Session["PacjentId"] == null)
    {
        Response.Redirect("~/Home/Logowanie");
    }
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>WizytaLekarz</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.WizytaLekarzId)

        <div class="form-group">
            Lekarz
           
            
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Lekarz.Nazwisko)
                @Html.DisplayFor(model => model.Lekarz.Imie)
                
            </div>
        </div>

        <div class="form-group">
            Specjalizacja
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Specjalizacja.Nazwa)
            </div>
        </div>

        <div class="form-group">
            Pacjent
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Pacjent.Nazwisko)

                @Html.DisplayFor(model => model.Pacjent.Imie)
            </div>
        </div>

        <div class="form-group">
            Data Wizyty
            <div class="col-md-10">
                @Html.DisplayFor(model => model.DataWizyty)
            </div>
        </div>

        <div class="form-group">
            Godzina Wizyty
            <div class="col-md-10">
                @Html.DisplayFor(model => model.GodzinaWizyty)
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
