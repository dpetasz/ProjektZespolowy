@model PrzychodniaPOZ.Models.WizytaLekarz


@{
    ViewBag.Title = "Zapisz";
    if (Session["PacjentId"] == null)
    {
        Response.Redirect("~/Home/Logowanie");
    }
}

<h2>Zapisz się na wizytę do lekarza</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>WizytaLekarz</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.WizytaLekarzId)
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Lekarz
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Lekarz.Nazwisko)
                @Html.DisplayFor(model => model.Lekarz.Imie)
            </dd>

            <dt>
                Specjalizacja
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Specjalizacja.Nazwa)
            </dd>

            <dt>
                Pacjent
            </dt>

            <dd>
                @Session["Name"].ToString()
            </dd>

            <dt>
                Data wizyty
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DataWizyty)
            </dd>

            <dt>
                Godzina wizyty
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GodzinaWizyty)
            </dd>


        </dl>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
