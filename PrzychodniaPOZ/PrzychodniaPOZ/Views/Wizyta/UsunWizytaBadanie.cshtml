@model PrzychodniaPOZ.Models.WizytaBadanie

@{
    ViewBag.Title = "Usun Badanie";
    if (Session["PacjentId"] == null)
    {
        Response.Redirect("~/Home/Logowanie");
    }
}

<h4>Odwołaj badanie</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Badanie</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.WizytaBadanieId)
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Nazwa
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Badanie.Nazwa)
            </dd>
            <dt>
                Pacjent
            </dt>
            <dd>
                @Session["Name"].ToString()
            </dd>
            <dt>
                Data badania
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DataBadanie)
            </dd>
            <dt>
                Godzyna badania
            </dt>
            <dd>
                @Html.DisplayFor(model => model.GodzinaBadanie)
            </dd>

        </dl>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Odwołaj" class="btn btn-default" />
            </div>
        </div>
    </div>

}
<div>
    @Html.ActionLink("Cofnij", "HistoriaWizytaBadanie")
</div>



