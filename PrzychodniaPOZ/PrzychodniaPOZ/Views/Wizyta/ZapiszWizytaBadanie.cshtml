@model PrzychodniaPOZ.Models.WizytaBadanie


@{
    ViewBag.Title = "Zapisz";
    if (Session["PacjentId"] == null)
    {
        Response.Redirect("~/Home/Logowanie");
    }
}

<h2>Zapisz się na badanie</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Badanie</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.WizytaBadanieId)
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Lekarz
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Badanie.Nazwa)
            </dd>

            <dt>
                Pacjent
            </dt>

            <dd>
                @Session["Name"].ToString()
            </dd>

            <dt>
                Data badania
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DataBadanie)
            </dd>

            <dt>
                Godzina badania
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GodzinaBadanie)
            </dd>


        </dl>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
