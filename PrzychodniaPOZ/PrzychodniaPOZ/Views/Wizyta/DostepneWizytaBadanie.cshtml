@model IEnumerable<PrzychodniaPOZ.Models.WizytaBadanie>



@{
    ViewBag.Title = "DostepneWizytaBadanie";
    if (Session["PacjentId"] == null)
    {
        Response.Redirect("~/Home/Logowanie");
    }
}

<h2>Dostępne badania lekarskie</h2>


<table class="table">
    <tr>
        <th>
            Nazwa
        </th>
        <th>
            Data Badania
        </th>
        <th>
            Godzina
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Badanie.Nazwa)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DataBadanie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GodzinaBadanie)
            </td>

            <td>
                @Html.ActionLink("Zapisz się na badanie", "ZapiszWizytaBadanie", new { id = item.WizytaBadanieId })
            </td>
        </tr>
    }

</table>